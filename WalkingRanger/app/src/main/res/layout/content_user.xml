<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nattachai.walkingranger.UserActivity"
    tools:showIn="@layout/app_bar_user">

    <LinearLayout
        android:id="@+id/zz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#373737"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                facebook:com_facebook_preset_size="normal"></com.facebook.login.widget.ProfilePictureView>

            <ImageView
                android:id="@+id/android"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/subtracted_circle2" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView

                android:id="@+id/data_wstep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Walk Step"
                android:textColor="#FFF"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/data_fsstep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/data_wstep"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/reset"
                android:src="@android:drawable/ic_menu_revert"
                android:paddingTop="8dp"
                android:layout_below="@+id/data_wstep"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zz"
        android:background="#c4c4c4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.2"
            android:text="Name"
            android:textColor="#777"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.4"
            android:textColor="#373737"

            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.2"
            android:text="Point"
            android:textColor="#777"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_fscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.4"
            android:textColor="#373737"

            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.2"
            android:text="Group"
            android:textColor="#777"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_fgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.4"
            android:textColor="#373737"

            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.2"
            android:text="Status"
            android:textColor="#777"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_fstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.4"
            android:textColor="#373737"

            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.2"
            android:text="FacebookID"
            android:textColor="#777"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_fid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.4"
            android:textColor="#373737"

            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>